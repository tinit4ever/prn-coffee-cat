@page
@model CoffeeCatRazporPage.Pages.Staff.StaffHomePageModel
@{
    ViewData["Title"] = "Booking Manager";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Booking Code</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Customer Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
        <tr>
            <td>@booking.BookingId</td>
            <td>@booking.BookingCode</td>
            <td>@booking.BookingStartTime</td>
            <td>@booking.BookingEndTime</td>
            <td>@booking.Customer.CustomerName</td>
            <td>
                <a asp-page="EditBooking" asp-route-id="@booking.BookingId">Edit</a> |
                <a asp-page-handler="Delete" asp-route-id="@booking.BookingId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>