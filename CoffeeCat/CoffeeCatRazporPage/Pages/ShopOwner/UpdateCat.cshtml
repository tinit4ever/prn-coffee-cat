@page
@model UpdateCatModel
@using Entities
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Update Cat";
}

<style>
    .area-section, .cat-section {
        border: 1px solid #ddd;
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .area-section, .cat-section h3 {
            color: #333;
            margin-bottom: 15px;
        }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="cat.CatId" />
    <div class="cat-section">
        <h3>Cat Details</h3>
        <div>
            <label asp-for="cat.CatName"></label>
            <input asp-for="cat.CatName" class="form-control" />
            <span asp-validation-for="cat.CatName" class="text-danger"></span>
        </div>

    </div>

    <input type="submit" value="Update Cat" onclick="return confirm('Are you sure you want to update this cat?');" />
    <a asp-page="./Catmanager" asp-route-areaId="@Model.cat.AreaId" class="btn btn-primary">Back</a>

</form>


<script>
    var errorMessage = '@Model.ErrorMessage';
    if (errorMessage !== '') {
        alert(errorMessage);
    }
</script>