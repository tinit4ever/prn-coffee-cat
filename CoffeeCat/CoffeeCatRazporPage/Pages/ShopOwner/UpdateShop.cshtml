@page
@model UpdateShopModel
@using Entities
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Update Shop";
}

<style>
    .shop-section, .table-section {
        border: 1px solid #ddd;
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .shop-section h3, .table-section h3 {
            color: #333;
            margin-bottom: 15px;
        }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
    }
</style>

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Shop.ShopId" />
    <div class="shop-section">
        <h3>Shop Details</h3>
        <div>
            <label asp-for="Shop.ShopName"></label>
            <input asp-for="Shop.ShopName" class="form-control" />
            <span asp-validation-for="Shop.ShopName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Shop.ShopEmail"></label>
            <input asp-for="Shop.ShopEmail" class="form-control" />
            <span asp-validation-for="Shop.ShopEmail" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Shop.ShopAddress"></label>
            <input asp-for="Shop.ShopAddress" class="form-control" />
            <span asp-validation-for="Shop.ShopAddress" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Shop.ShopTelephone"></label>
            <input asp-for="Shop.ShopTelephone" class="form-control" />
            <span asp-validation-for="Shop.ShopTelephone" class="text-danger"></span>
        </div>
    </div>

  
   
    <input type="submit" value="Update Shop" onclick="return confirm('Are you sure you want to update this shop?');" />

</form>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<script>
    var errorMessage = '@Model.ErrorMessage';
    if (errorMessage !== '') {
        alert(errorMessage);
    }
</script>