@page
@model DetailMenuModel
@{
    <div class="container">
        <h1 class="text-center my-4">Detail Menu</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
            </thead>
            <tbody>
                @foreach (var menu in Model.MenuItems)
                {
                    <tr>
                        <td>@menu.ItemName</td>
                        <td>@menu.ItemPrice</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- Phân trang -->
        <div class="d-flex justify-content-center my-3">
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="./DetailMenu" asp-route-pageIndex="@i" asp-route-shopId="@Model.ShopId">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}
