@page
@model DetailCatModel
@{

    <div class="container">
        <h1 class="text-center my-4">Cats</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Cats)
                {
                    <tr>

                        <td>@cat.CatName</td>
                        <td>@cat.CatImage</td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-page="./DetailArea" asp-route-ShopId="@Model.ShopId" class="btn btn-primary">Back</a>
        <!-- Phân trang -->
        <div class="d-flex justify-content-center my-3">
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="" asp-route-pageIndex="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}
