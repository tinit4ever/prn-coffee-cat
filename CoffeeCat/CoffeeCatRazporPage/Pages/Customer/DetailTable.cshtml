@page
@model DetailTableModel

@{
    <style>
        .btn-primary {
            background-color: #f2aaed;
            border-color: #f2aaed;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.5s ease;
        }

            .btn-primary:hover {
                background-color: #f2aaed;
                border-color: #f2aaed;
            }
    </style>
    <div class="container">
        <h1 class="text-center my-4">Tables</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Capacity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model.Tables)
                {
                    <tr>
                        <td>@table.TableName</td>
                        <td>@table.TableCapacity</td>
                    </tr>
                    
                }
                <a asp-page="/Customer/BookingForm" asp-route-areaId="@Model.AreaId" asp-route-shopId="@Model.ShopId" class="btn btn-primary">Book Table</a>
                
            </tbody>
        </table>
        <a asp-page="./DetailArea" asp-route-ShopId="@Model.ShopId" class="btn btn-primary">Back</a>
        <!-- Phân trang -->
        <div class="d-flex justify-content-center my-3">
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="" asp-route-pageIndex="@i">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
}
