@page
@model CoffeeCatRazporPage.Pages.AreaManagerModel
@{
    ViewData["Title"] = "Coffee Shops";
}

<div class="container">
    <h1 class="text-center my-4">Coffee Shops</h1>

    <!-- Sắp xếp và Tạo mới -->
    <div class="d-flex justify-content-between my-3">
        <div>
            <a asp-page-handler="Sort" asp-route-sortOrder="Address" class="btn btn-link mx-2">Sort </a>
        </div>
        <div>
            <a asp-page="CreateArea" class="btn btn-primary">Create New Area</a>
        </div>
    </div>

    <!-- Tìm kiếm -->
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search">
            <!-- Thêm trường sortOrder vào form tìm kiếm -->
            <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Enabled</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var area in Model.Areas)
            {
                <tr>
                    <td>@area.AreaName</td>             
                    <td>@(area.AreaEnabled ?? false)</td>
                    <td>
                        <form method="post" asp-page-handler="ToggleEnabled" asp-route-id="@area.AreaId" asp-route-isEnabled="@(!area.AreaEnabled)">
                            <button type="submit" class="btn btn-link">@((area.AreaEnabled ?? false) ? "Disable" : "Enable")</button>
                        </form>
                        <!-- Nút Update -->
                        <a asp-page="UpdateCat" asp-route-id="@area.AreaId" class="btn btn-link">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <div class="d-flex justify-content-center my-3">
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="" asp-route-pageIndex="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>